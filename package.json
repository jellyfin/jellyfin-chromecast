        "css-loader": "6.8.1",
        "eslint": "8.50.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-import": "2.28.1",
        "eslint-plugin-jsdoc": "46.8.2",
        "eslint-plugin-json": "3.1.0",
        "eslint-plugin-prettier": "5.0.0",
